@model ResetPasswordViewModel
<section class="hero">
    <div class="container">
        <div class="hero-inner">
            <div class="hero-copy">
                <h1 class="hero-title mt-0">
                    Reset Password
                </h1>
                <form asp-action="ResetPassword">
                    <input type="hidden" asp-for="Token" />
                    <div class="boxed-container mt-24">
                        <div class="mt-8">
                            <label asp-for="Email"></label>
                        </div>
                        <div class="mt-8">
                            <input asp-for="Email" class="input" />
                            <span asp-validation-for="Email"></span>
                        </div>
                    </div>
                    <div class="boxed-container mt-24">
                        <div class="mt-8">
                            <label asp-for="Password"></label>
                        </div>
                        <div class="mt-8">
                            <input asp-for="Password" class="input" />
                            <span asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="boxed-container mt-24">
                        <div class="mt-8">
                            <label asp-for="ConfirmPassword"></label>
                        </div>
                        <div class="mt-8">
                            <input asp-for="ConfirmPassword" class="input" />
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>
                    <div class="hero-cta mt-24"><button type="submit" class="button button-primary">Reset Password</button> </div>
                </form>
            </div>
        </div>
    </div>
</section>